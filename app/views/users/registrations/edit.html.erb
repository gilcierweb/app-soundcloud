<div class="card shadow-lg mb-5">
  <div class="card-body p-5">
    <h1 class="fs-4 card-title fw-bold mb-4">Editando <%= resource_name.to_s.humanize %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, class: 'form-label mb-2 text-muted' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('devise.registrations.form.text.confirmation') %>: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-3">
        <%= f.label :password,class: 'form-label mb-2 text-muted' %> <i><%= t('devise.registrations.form.text.password') %></i>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-lg' %>
        <% if @minimum_password_length %>

          <em><%= @minimum_password_length %> <%= t('devise.registrations.form.text.min') %></em>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: 'form-label mb-2 text-muted' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg' %>
      </div>

      <div class="mb-3">
        <%= f.label :current_password, class: 'form-label mb-2 text-muted' %>
        <i><%= t('devise.registrations.form.text.current_password') %></i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control form-control-lg' %>
      </div>

      <div class="d-grid gap-2 mt-4">
        <%= f.submit t('devise.registrations.form.edit.submit'), class: 'btn btn-lg btn-primary' %>
      </div>
    <% end %>

    <h3><%= t('devise.registrations.form.title.cancel') %></h3>

    <div><%= t('devise.registrations.form.title.unhappy') %> <%= button_to t('devise.registrations.form.title.cancel_my_account'), registration_path(resource_name), data: { confirm: t('confirm'), turbo_confirm: t('confirm') }, method: :delete %></div>

    <%= link_to t('back'), :back, class: "btn btn-default" %>
  </div>
</div>