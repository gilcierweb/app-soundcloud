<div class="card shadow-lg mb-5">
  <div class="card-body p-5">
    <h1 class="fs-4 card-title fw-bold mb-4"><%= t('devise.passwords.title.new') %></h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, class: 'form-label mb-2 text-muted' %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
      </div>

      <div class="d-grid gap-2 mt-4">
        <%= f.submit t('devise.passwords.form.new.submit'), class: 'btn btn-lg btn-primary' %>
      </div>
    <% end %>

  </div>

  <%= render "users/shared/links" %>

</div>
