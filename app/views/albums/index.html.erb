<h1>Albums</h1>

<div id="albums">
  <% @albums.each do |album| %>
    <%= render album %>

    <p>
      <%= link_to "Show this album", album, class: 'btn btn-info' %>
    </p>
  <% end %>
  <%== raw pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
</div>

<%= link_to "New album", new_album_path, class: 'btn btn-primary' %>
