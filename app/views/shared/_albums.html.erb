<div class="album py-5 bg-body-tertiary">
  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      <% albums.each do |row| %>
        <div class="col">
          <div class="card shadow-sm">

            <%= image_tag(row.cover, class: 'bd-placeholder-img card-img-top') if row.cover.attached? %>

            <div class="card-body">
              <p class="card-text"> <%= row.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to('Visualizar', song_path(row), class: 'btn btn-sm btn-outline-secondary') %>
                  <%= link_to('Editar', edit_album_path(row), class: 'btn btn-sm btn-outline-secondary') %>
                </div>
                <small class="text-body-secondary">9 mins</small>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>