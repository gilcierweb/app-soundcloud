<% flash.each do |key, value| %>
  <div class="row">
    <div class="col-12 mt-3">
      <div class="<%= flash_class(key) %> alert-dismissible fade show" role="alert">
        <%= value %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
  </div>
<% end %>
